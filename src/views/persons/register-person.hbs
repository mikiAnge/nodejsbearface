<div class="container p-2"></div>
<div class="row mx-auto">
    <div class="col-md-5 offset-md-3">
        <div class="card">
            <div class="card-header">
                Registro de Persona ha Buscar
            </div>
            <div class="card-body">
                <form action="/persons/upload" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre(s)" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="lastname" placeholder="Apellido(s)" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="age" placeholder="Edad" class="form-control">
                    </div>

                    <div class="form-group row">
                        <input type="text" class="form-control col-sm-6 mx-3" name="ci" placeholder="Cedula de Identidad" value="{{ci}}" pattern="[0-9].{7,}" title="Ingrese solo numeros Ejm:0123456789">
                        <select class="form-control col-sm-4" name="extension">
                            <option>Extension</option>
                            <option>Tja</option>
                            <option>Cbba</option>
                            <option>Chq</option>
                            <option>Sc</option>
                            <option>Pt</option>
                            <option>Or</option>
                            <option>Lp</option>
                            <option>Bn</option>
                            <option>Pd</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Cargar</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" data-text="Selecciona una Imagen" required>
                            <label class="custom-file-label" for="inputGroupFile01">Selecciona la imagen</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="DescripciÃ³n"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">
                            Registrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>