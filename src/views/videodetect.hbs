<head>
    <!--SCRIPTS DE RECONOCIMIENTO-->
    <script defer src="/script/face-api.min.js"></script>
    <script defer src="/script/scvideo.js"></script>
    <!--<script defer src="/script/listvideoprueba.js"></script>-->
</head>

<div class="container p-2">
    <div class="offset-md-3">
        <div class="row text-center">
            {{#repite persons}}
            <h1>
                {{name}} {{lastname}} > Edad: {{age}}
            </h1>
            {{/repite}}
            <div class="d-none">
                <table id="namelastname">
                    {{#each persons}}
                    <tr>
                        <td>{{name}} {{lastname}}</td>
                    </tr>
                    {{/each}}
                </table>
                <table id="path">
                    {{#each persons}}
                    <tr>
                        <td>{{path}}</td>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
    <div id="resobt"></div>
</div>
{{#if persons}}
    <input type="file" class="btn-info" id="videoUpload" multiple>
        <!--Pop up para ver el tiempo de coincidencia-->
        <div class="container">
            <div class="mt-4 offset-md-0">
                    <label>Ver tiempos de las coincidencias ubicadas</label>
                    <button class="open-button" onclick="openRegister()">Revisar Datos</button>
                    <div class="form-popup" id="myForm">
                        <form action="/registers/upload" method="POST" class="form-container">
                            <h3>Tiempos donde se obtuvieron coincidencias de: </h3>
                            {{#repite persons}}
                            <input type="text" name="name" id="name" placeholder="{{name}} {{lastname}}" value="{{name}} {{lastname}}">
                            {{/repite}}
                            <div class="form-group">
                                <textarea class="form-control" name="datos" id="datos"></textarea>
                            </div>
                            <button type="submit" class="btn">Guardar</button>
                            <button type="button" class="btn cancel" onclick="closeRegister()">Cerrar</button>
                        </form>
                    </div>
                    <h5 id="resobt"></h5>
            </div>
        </div>
    </div>
<div class="Contenedor" id="contenedor">
    <video id="video" width="860" height="484" autoplay muted></video>
</div>
{{else}}
<div class="container p-2">
    <div class="bg-danger p-4">
        <h2>Error!!!</h2>
        <p>No se encontro ningun dato para analizar,</p>
        <p>realice una busqueda primero</p>
    </div>
</div>
{{/if}}